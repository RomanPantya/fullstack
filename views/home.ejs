
<h1>hi</h1>

<ul>
  <% todos.forEach(({ title, is_completed }) => { %>
    <li><%= title %> </li>
  <% }) %>
</ul>

<hr/>

<% if (userId) { %>
    <form method="post" action="http://localhost:3000/api/create-todo">
        <input type="text" name="title" placeholder="title">
        <input id="user-id-input" type="text" name="user_id" placeholder="userId" value="<%= userId %>">
        <input type="submit" value="Add task">
    </form>
<% } else { %>
    <a href="http://localhost:3000/sign-up">Sign up for create your first TODO list</a>
<% } %>
